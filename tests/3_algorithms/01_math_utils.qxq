let abs = fn (n)
  if n < 0 then -n else n end
end;

let pow = fn (base, exp)
  let rec iter = fn (i, acc)
    if i >= exp then
      acc
    else
      iter(i + 1, acc * base)
    end
  end;
  iter(0, 1)
end;

let not = fn (b) if b then false else true end;
let modulo = fn (a, b) a - (b * (a / b)) end;

let is_even = fn (n) modulo(n, 2) == 0 end;
let is_odd = fn (n) not(is_even(n)) end;

is_even(pow(2, 10))
